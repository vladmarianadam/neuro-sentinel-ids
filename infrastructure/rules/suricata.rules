# ICMP Alert (Keep as is, it works!)
alert icmp any any -> any any (msg:"ICMP Ping Detected"; sid:1000003; rev:1;)

# ICMP Flood - Lowered to 20 pings in 1 second
alert icmp $EXTERNAL_NET any -> $HOME_NET any (msg:"Possible ICMP Flood Detected"; itype:8; threshold: type both, track by_src, count 20, seconds 1; classtype:attempted-dos; sid:1000001; rev:2;)

# SYN Flood - Lowered to 50 SYN packets in 1 second
alert tcp $EXTERNAL_NET any -> $HOME_NET 80 (msg:"Possible SYN Flood Detected"; flags:S; flow:stateless; threshold: type both, track by_src, count 50, seconds 1; classtype:attempted-dos; sid:1000002; rev:2;)