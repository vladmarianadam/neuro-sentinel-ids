# Custom Rules
alert icmp any any -> any any (msg:"ICMP Ping Detected"; sid:1000003; rev:1;)
alert icmp $EXTERNAL_NET any -> $HOME_NET any (msg:"Possible ICMP Flood Detected"; itype:8; threshold: type both, track by_src, count 100, seconds 1; classtype:attempted-dos; sid:1000001; rev:1;)
alert tcp $EXTERNAL_NET any -> $HOME_NET 80 (msg:"Possible SYN Flood Detected"; flags:S; flow:stateless; threshold: type both, track by_src, count 500, seconds 1; classtype:attempted-dos; sid:1000002; rev:1;)